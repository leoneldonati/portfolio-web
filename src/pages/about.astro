---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import foto2 from "../assets/carrousel/foto-2.png";
import foto4 from "../assets/carrousel/foto-4.png";
import foto5 from "../assets/carrousel/foto-5.png";
import Node from "../icons/Node.astro";
import JS from "../icons/JavaScript.astro";
import React from "../icons/React.astro";
import Vite from "../icons/Vite.astro";
import HTML from "../icons/HTML.astro";
import Git from "../icons/Git.astro";
import Tailwind from "../icons/Tailwind.astro";
import Mongo from "../icons/MongoDB.astro";
---

<Layout title="About me ðŸ˜Š">
  <section class="w-full text-center">
    <h3
      style="font-size: 2em; padding-top: 1em; color: #ffbd33; filter: contrast(1.9);"
      class="underline-offset-8 font-bold"
    >
      Here I leave some interesting things about me ðŸ˜Š
    </h3>

    <div class="flex flex-row p-4 gap-4">
      <article
        style="width: 30em;"
        class="overflow-x-hidden flex flex-row"
      >
        <Image
          id="photoCarrousel"
          src={foto2}
          alt="foto leonel 1"
          style={{ width: "30em", borderRadius: "3em", filter: "grayscale(1)", objectFit: 'cover' }}
        />
        <Image
          id="photoCarrousel"
          src={foto4}
          alt="foto leonel 2"
          style={{ width: "30em", borderRadius: "3em", filter: "grayscale(1)",  objectFit: 'cover' }}
        />
        <Image
          id="photoCarrousel"
          src={foto5}
          alt="foto leonel 3"
          style={{ width: "30em", borderRadius: "3em", filter: "grayscale(1)",  objectFit: 'cover' }}
        />
      </article>

      <div class="w-full">
        <p class="text-left text-2xl text-white text-ellipsis mb-4">
          I Leonel, a <strong>JavaScript FullStack Web Developer</strong> from Argentina. <br />
           I can <b>boost</b> your business with a great presence on the web, thanks to
          the fact that develop <b> fast,
           efficient and SEO friendly applications</b>. <br />
          And yes, love JavaScript and good HTML never dies
        </p>

        <div>
          <span>What tools do i use?</span>
          <ul>
            <li>JavaScript <JS /></li>
            <li>Node JS <Node /></li>
            <li>React JS <React /></li>
            <li>HTML <HTML /></li>
            <li>Git <Git /></li>
            <li>Tailwind <Tailwind /></li>
            <li>Vite <Vite /></li>
            <li>Mongo DB <Mongo /></li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  // Carrusel de fotos en la secciÃ³n "about"
  const $images = document.querySelectorAll("img#photoCarrousel");

  $images.forEach((img) => {
    const image = img as HTMLElement;
    image.style.transition = "all .2s ease";
    let position: number = 0;



    setInterval(() => {
      if (position === 200) {
        image.style.opacity = "0";
        position = 0;
        image.style.opacity = "1";
        image.style.translate = `-${position}%`;
        return;
      }
      position += 100;
      image.style.translate = `-${position}%`;
    }, 4000);
  });
</script>
