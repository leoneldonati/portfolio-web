---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home">
  <section class="w-full h-full grid place-items-center translate-y-[-13%]">
    <div class="w-full text-center text-slate-300">
      <h1 class="text-[10em] gradient">Leonel Web</h1>
      <h2 class="text-[5em] mt-[-3%]">Web development</h2>
    </div>
  </section>
</Layout>

<style>
  .gradient {
    background-image: linear-gradient(45deg, #ff5733, #ffbd33);
    background-clip: text; /* Aplicar el gradiente al texto */
    
    -webkit-background-clip: text; /* Para navegadores webkit (Safari/Chrome) */
    color: transparent; /* Hacer que el color del texto sea transparente */
    font-weight: bold; 
  }
</style>
