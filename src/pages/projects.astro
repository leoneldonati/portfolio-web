---
import { ProjectsList } from "../components/ProjectsList";
import { ProjectInfo } from "../components/ProjectInfo";
import Filters from '../components/Filters.tsx'
import Layout from "../layouts/Layout.astro";
---

<Layout title="Projects">
  <section class="w-full text-center grid place-items-center" >
    
    <div class="w-full flex flex-1 flex-row gap-20 justify-center items-start translate-y-[20%]">
      <div class="border bg-[#ff5733] shadow-md shadow-[#555] p-2 text-slate-200 w-[400px] rounded-lg">
        
        <ProjectsList client:load />
      </div>

      <div class="flex flex-col gap-5">
        
        <div class="border border-slate-300 shadow-md shadow-slate-100 bg-[#555] p-2 text-slate-200 rounded-lg max-w-[800px] ">
          <h2 class="text-2xl underline underline-offset-8 mb-2"><b>Project info..</b></h2>
          <ProjectInfo client:load  />
        </div>

        <Filters client:load />
      </div>
    </div>
  </section>
</Layout>
