---
import Menu from "../icons/Menu.astro";
---

<nav>
  <ul class="nav-ul">
    <li>
      <a href="#projects">Projects</a>
    </li>
    <li>
      <a href="#about">About</a>
    </li>
    <button class="menu-btn">
      <Menu />
    </button>
  </ul>
</nav>

<script>
  const $nav = document.querySelector('.nav-ul') as HTMLElement;
  const $menuBtn = document.querySelector('.menu-btn') as HTMLButtonElement;

  let clicked = false;
  $menuBtn.addEventListener('click', () => {
    clicked = !clicked
    $nav.style.transform = `translateX(${clicked ? 0 : 100}%)`
  })

</script>
  

<style>
  nav {
    position: relative;
  }
  button {
    position: absolute;
    top: 0;
    left: -40%;
    background: var(--color-2);
    cursor: pointer;
    display: block;
    font-size: 1em;
    color: var(--text-color-light);
    border: transparent 1px solid;
    border-radius: 0.1em;
    padding: 0.3em 0.7em;
    transition: all 0.2s cubic-bezier(0.165, 0.84, 0.44, 1);
  }
  button:hover {
    transform: scale(0.95);
  }
  button:active {
    transform: scale(1.05);
  }

  .nav-ul {
    position: relative;
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    justify-content: center;
    font-size: var(--paragraph-size);
    list-style: none;
    transform: translateX(0);
    transition: transform 0.2s cubic-bezier(0.455, 0.03, 0.515, 0.955);
  }

  .nav-ul a {
    display: block;
    color: var(--text-color-light);
    text-decoration: none;
    border: transparent 1px solid;
    border-radius: 0.1em;
    padding: 0.3em 1em;
    transition: all 0.2s cubic-bezier(0.165, 0.84, 0.44, 1);
  }
  .nav-ul a:hover {
    border: var(--color-2) 1px solid;
    background-color: var(--color-2);
    color: #fff;
  }
  .nav-ul a:active {
    transform: scale(0.94);
  }
  .menu-btn {
    display: none;
    border-radius: 0.6em;
  }
  @media (max-width: 850px) {
    .nav-ul {
      background: linear-gradient(
        to top,
        rgba(44, 44, 44, 0.8),
        rgba(44, 44, 44, 1)
      );
      padding: 0.5em;
      border-radius: 0.5em;
      position: absolute;
      height: 300px;
      right: 0;
      top: -1em;
      flex-flow: column;
      transform: translateX(100%);
    }
    .menu-btn {
      display: grid;
      place-items: center;
    }
  }
</style>
