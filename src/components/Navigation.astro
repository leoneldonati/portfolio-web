---
import LinkedIn from "../icons/LinkedIn.astro";
import Telegram from '../icons/Telegram.astro'
---

<nav>
  <ul class="nav-ul">
    <li>
      <a href="#projects">Projects</a>
    </li>
    <li>
      <a href="#about">About</a>
    </li>
    <li>
      <button class="contact-btn">
        Contact
      </button>
    </li>
  </ul>

  <div class="contact-wrapper">
    <ul>
      <li>
        <a 
          href="https://linkedin.com/in/leoneldonati"
          target="_blank"
          title="Go to LinkedIn"
          rel="noreferrer noopener"
        >
        <LinkedIn />
        LinkedIn
        </a>
      </li>
      <li>
        <a 
          href="https://t.me/leonel_web"
          target="_blank"
          rel="noreferrer noopener"
          title="Go to Telegram"
        >
        <Telegram />
        Telegram
        </a>
      </li>
      <li></li>
    </ul>
  </div>
</nav>
<script>
  const $contactWrapper = document.querySelector('.contact-wrapper') as HTMLElement;
  const $contactBtn = document.querySelector('.contact-btn') as HTMLButtonElement;

  let clicked = false;
  function handleClick () {
    clicked = !clicked;
    $contactWrapper.style.opacity = clicked ? '1' : '0';
    $contactWrapper.style.pointerEvents = clicked ? 'auto' : 'none';
  };
  $contactBtn.addEventListener('click', handleClick);

</script>

<style>
  nav {
    position: relative;
  }
  .contact-wrapper {
    background-color: #333;
    border: 2px solid var(--color-2);
    border-radius: .5em;
    position: absolute;
    right: 0;
    bottom: -8.7em;
    z-index: 5;
    opacity: 0;
    pointer-events: none;
    transition: all .2s cubic-bezier(0.075, 0.82, 0.165, 1);
  }
  .contact-wrapper > ul {
    display: flex;
    flex-flow: column;
  }
  .contact-wrapper li {
    width: 100%;
  }
  .contact-wrapper a {
    background-color: none;
    display: flex;
    align-items: center;
    gap: .6em;
    padding: .5em .9em;
    text-decoration: none;
    color: var(--text-color-light);
    transition: all .2s cubic-bezier(0.19, 1, 0.22, 1);
  }
  .contact-wrapper a:hover {
    text-shadow: 0 0 .6em var(--text-color-light);
    transform: scale(.95);
  }
  .contact-wrapper a:active {
    transform: scale(.90);
  }
  button {
    background: var(--color-2);
    cursor: pointer;
    display: block;
    font-size: 1em;
    color: var(--text-color-light);
    border: transparent 1px solid;
    border-radius: 0.1em;
    padding: 0.3em .7em;
    transition: all 0.2s cubic-bezier(0.165, 0.84, 0.44, 1);
  }
  button:hover {
    transform: scale(.95);
  }
  button:active {
    transform: scale(1.05);
  }

  ul {
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    justify-content: center;
    font-size: var(--paragraph-size);
    list-style: none;
  }

  .nav-ul a {
    display: block;
    color: var(--text-color-light);
    text-decoration: none;
    border: transparent 1px solid;
    border-radius: 0.1em;
    padding: 0.3em 1em;
    transition: all 0.2s cubic-bezier(0.165, 0.84, 0.44, 1);
  }
  .nav-ul a:hover {
    border: var(--color-2) 1px solid;
    background-color: var(--color-2);
    color: #fff;
  }
  .nav-ul a:active {
    transform: scale(0.94);
  }
</style>
