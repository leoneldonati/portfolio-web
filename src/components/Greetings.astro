---
const currentHour = new Date().getHours();

let greeting = "";

if (currentHour < 12) {
  greeting = "Good morning!";
} else if (currentHour < 18) {
  greeting = "Good afternoon!";
} else {
  greeting = "Good night!";
}
---

<span>
  {greeting}
</span>

<style>
  span {
    width: max-content;
    font-weight: bold;
    font-size: 1.1em;
    color: var(--color-2);
  }
  @media (max-width: 850px) {
    span {
      position: absolute;
      background-color: var(--text-color-dark);
      border-radius: .5em;
      padding: .4em;
      bottom: -26%;
      left: 0;
    }
  }
</style>
