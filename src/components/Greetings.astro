---
  const currentHour = new Date().getHours();

  let greeting = "";

  if (currentHour < 12) {
    greeting = "Good morning!"
  }
  else if (currentHour < 18) {
    greeting = "Good afternoon!"
  }
  else {
    greeting = "Good night!"
  };
---

<span>
  {
    greeting
  }
</span>

<style>
  span {
    font-weight: bold;
    font-size: 1.1em;
    font-style: italic;
  }
</style>