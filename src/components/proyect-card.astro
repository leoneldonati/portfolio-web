---
import { Image } from "astro:assets";
import img from "../assets/carrousell/img.png";

interface Props {
  title: string;
  description: string;
  lang: string;
  private: boolean;
  created: Date | string;
  modified: Date | string;
  deployUrl?: string;
  githubUrl: string;
  image: ImageMetadata;
}

const { title, description, lang, created, modified, private: privatedRepo, image, githubUrl, deployUrl } = Astro.props;
---

<article class="p-2 bg-black/20 rounded-md w-full max-w-[500px]">
  <div
    class="grid grid-cols-2 grid-rows-2 place-items-center items-start"
    style="grid-template-areas: 'title title' 'desc data'; grid-template-rows: max-content 1fr;"
  >
    <h3 class="text-xl underline mb-2" style="grid-area: title;">
      {title}
    </h3>

    <p style="grid-area: desc;">
      {description}
    </p>

    <ul
      style="grid-area: data;"
      class="text-white/80 [&>li]:flex [&>li]:items-center [&>li]:gap-1 md:inline-block hidden"
    >
      <li>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-code"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M7 8l-4 4l4 4"></path><path d="M17 8l4 4l-4 4"></path><path
            d="M14 4l-4 16"></path></svg
        >
        <span>{lang}</span>
      </li>
      <li>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-clock-plus"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M20.984 12.535a9 9 0 1 0 -8.468 8.45"></path><path d="M16 19h6"
          ></path><path d="M19 16v6"></path><path d="M12 7v5l3 3"></path></svg
        >
        <span>Creado: {new Date(created).toLocaleDateString()}</span>
      </li>
      <li>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-clock-edit"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M21 12a9 9 0 1 0 -9.972 8.948c.32 .034 .644 .052 .972 .052"
          ></path><path d="M12 7v5l2 2"></path><path
            d="M18.42 15.61a2.1 2.1 0 0 1 2.97 2.97l-3.39 3.42h-3v-3l3.42 -3.39z"
          ></path></svg
        >
        <span>Modificado: {new Date(modified).toLocaleDateString()}</span>
      </li>
      <li>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="icon icon-tabler icons-tabler-filled icon-tabler-lock"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M12 2a5 5 0 0 1 5 5v3a3 3 0 0 1 3 3v6a3 3 0 0 1 -3 3h-10a3 3 0 0 1 -3 -3v-6a3 3 0 0 1 3 -3v-3a5 5 0 0 1 5 -5m0 12a2 2 0 0 0 -1.995 1.85l-.005 .15a2 2 0 1 0 2 -2m0 -10a3 3 0 0 0 -3 3v3h6v-3a3 3 0 0 0 -3 -3"
          ></path></svg
        >
        <span>{privatedRepo ? 'Privado' : 'PÃºblico'}</span>
      </li>
    </ul>
  </div>

  <div id="images-proyect">
    <Image
      src={img}
      alt="Imagen de proyecto 1"
      width={img.width}
      height={img.height}
      loading="lazy"
    />

    <div
      class="absolute bottom-6 w-full flex flex-row justify-center gap-2 md:opacity-0 md:translate-y-10 transition"
      id="links-buttons"
    >
      <a
        href=""
        class="bg-yellow-300 text-black px-3 py-1 rounded-md flex gap-1 items-center transition shadow-sm shadow-transparent hover:shadow-yellow-100"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="icon icon-tabler icons-tabler-filled icon-tabler-brand-github"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M5.315 2.1c.791 -.113 1.9 .145 3.333 .966l.272 .161l.16 .1l.397 -.083a13.3 13.3 0 0 1 4.59 -.08l.456 .08l.396 .083l.161 -.1c1.385 -.84 2.487 -1.17 3.322 -1.148l.164 .008l.147 .017l.076 .014l.05 .011l.144 .047a1 1 0 0 1 .53 .514a5.2 5.2 0 0 1 .397 2.91l-.047 .267l-.046 .196l.123 .163c.574 .795 .93 1.728 1.03 2.707l.023 .295l.007 .272c0 3.855 -1.659 5.883 -4.644 6.68l-.245 .061l-.132 .029l.014 .161l.008 .157l.004 .365l-.002 .213l-.003 3.834a1 1 0 0 1 -.883 .993l-.117 .007h-6a1 1 0 0 1 -.993 -.883l-.007 -.117v-.734c-1.818 .26 -3.03 -.424 -4.11 -1.878l-.535 -.766c-.28 -.396 -.455 -.579 -.589 -.644l-.048 -.019a1 1 0 0 1 .564 -1.918c.642 .188 1.074 .568 1.57 1.239l.538 .769c.76 1.079 1.36 1.459 2.609 1.191l.001 -.678l-.018 -.168a5.03 5.03 0 0 1 -.021 -.824l.017 -.185l.019 -.12l-.108 -.024c-2.976 -.71 -4.703 -2.573 -4.875 -6.139l-.01 -.31l-.004 -.292a5.6 5.6 0 0 1 .908 -3.051l.152 -.222l.122 -.163l-.045 -.196a5.2 5.2 0 0 1 .145 -2.642l.1 -.282l.106 -.253a1 1 0 0 1 .529 -.514l.144 -.047l.154 -.03z"
          ></path></svg
        >GitHub</a
      >
      <a
        href=""
        class="bg-yellow-300 text-black px-3 py-1 rounded-md flex gap-1 items-center transition shadow-sm shadow-transparent hover:shadow-yellow-100"
        ><svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-app-window"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M3 5m0 2a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2z"
          ></path><path d="M6 8h.01"></path><path d="M9 8h.01"></path></svg
        >Deploy</a
      >
    </div>
  </div>
</article>
