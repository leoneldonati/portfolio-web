<style>
  a {
    transition: transform 0.2s ease-in-out;
    animation: shadow 1s infinite alternate;

    &:hover {
      animation: none;
      transform: scale(1.05);
    }

    &:hover > svg {
      animation: hoop 0.8s linear;
    }

    & > svg {
      animation: none;
    }
  }
  @keyframes shadow {
    from {
      box-shadow: 2px 2px 10px #ff7800;
    }
    to {
      box-shadow: 2px 4px 18px #ffae00;
    }
  }
  @keyframes hoop {
    0% {
      transform: translateY(0px);
    }
    25% {
      transform: translateY(-10px);
    }
    50% {
      transform: translateY(0px);
    }
    75% {
      transform: translateY(-5px);
    }
    100% {
      transform: translateY(0px);
    }
  }
</style>
