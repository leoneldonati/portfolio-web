---
interface Props {
  color: string;
  textColor: string;
}

const { color, textColor } = Astro.props;
---

<span
  class="flex flex-row gap-1 py-1 px-2 rounded-lg max-w-fit"
  style=`background-color: ${color}; color: ${textColor}; box-shadow: 0 0 8px ${color}`
>
  <slot name="icon"/>
  <slot />
</span>
