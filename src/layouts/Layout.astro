---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/bounce-right.svg" />
		
		<!-- title -->
		<title>Leonel Web | {title}</title>

		<!-- viewtransitions -->
		<ViewTransitions fallback='none' />
	</head>
	<body class="bg-[#333]">
		<main class="max-w-7xl min-h-screen mx-auto shadow-md shadow-[#777]">
			<Header />
			<slot />
			<Footer />
		</main>
	</body>
</html>

<!-- Estilos globales -->
<style is:global>
	@font-face {
		font-family: 'Heebo';
		src: url("/Onest/Onest-VariableFont_wght.ttf") format("ttf");
		font-weight: 400;
	}
  body {
		font-family: 'Onest Variable', sans-serif;
	}
	main {
		background: linear-gradient(to top,#333, #444); 
	}
</style>
