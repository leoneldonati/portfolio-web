---
import { ViewTransitions } from "astro:transitions";
interface Props {
  currentPage?: string;
  description: string;
}

const { currentPage, description } = Astro.props;
const defaultTitle = "Leonel Donati - Desarrollador Web"
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/LOGOTIPO-LEONEL-WEB.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow">
    <link rel="canonical" href={Astro.url.href}>

    <!-- OG -->
    <meta property="og:description" content={description}>
    <meta property="og:image" content="https://res.cloudinary.com/dzmuriaby/image/upload/v1728187838/twvlaq9sj7bwbqfbipdo.png">
    <meta property="og:url" content={Astro.url.href}>

    <!-- TWITTER - X -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={currentPage ? `Ingresa a mi secciÃ³n ${currentPage}` : defaultTitle}>
    <meta name="twitter:description" content={description}>
    <meta name="twitter:image" content="https://res.cloudinary.com/dzmuriaby/image/upload/v1728187847/j9qdaa5ooamyxitiuhm0.png">
    <meta name="twitter:image:alt" content="Imagen del sitio web en un shot inclinado.">
    <meta name="twitter:site" content="@_leodonati">
    
    <title>
      {currentPage ? currentPage : defaultTitle}
    </title>

    <ViewTransitions fallback="none" />
  </head>
  <body>
    <main class="max-w-[1200px] mx-auto">
      <slot />
    </main>
  </body>
</html>

<style>
  body {
    background: linear-gradient(to right top, rgb(33, 33, 33), rgb(44, 44, 44));
  }
</style>
